<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.iiitd.pcsma.coursecritic.AddNewCourseActivity"
    tools:showIn="@layout/activity_add_new_course">

    <TextView
        android:id="@+id/instructorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#666"
        android:textSize="22dp"
        android:text = "Instructor name" />

    <EditText
        android:id="@+id/instructorNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructorName"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#222"
        android:hint="Enter instructor name here"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instructorNameText"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#666"
        android:text = "Course name"
        android:textSize="22dp" />

    <EditText
        android:id="@+id/courseNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseName"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#222"
        android:hint="Enter course name here"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/courseCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseNameText"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#666"
        android:text = "Course code"
        android:textSize="22dp" />


    <EditText
        android:id="@+id/courseCodeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseCode"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#222"
        android:hint="Enter course code here"
        android:textSize="22dp" />

    <Button
        android:id = "@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courseCodeText"
        android:maxLines="3"
        android:padding="8dp"
        android:textColor="#222"
        android:text = "Submit"
        android:onClick="onSubmit"
        android:textSize="22dp"/>


</RelativeLayout>
